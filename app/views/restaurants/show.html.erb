<p style="color: green"><%= notice %></p>

<%= render @restaurant %>

<h2>All reviews for <%= @restaurant.name %></h2>

<ul>
  <% @restaurant.reviews.each do |review| %>
  <li><%= "⭐️" * review.rating %></li>
  <li><%= review.content %></li>
  <% end %>
</ul>

<%= link_to 'Add a review', new_restaurant_review_path(@restaurant) %>

<div>
  <%= link_to 'Edit this restaurant', edit_restaurant_path(@restaurant) %>
  <%= link_to 'Back to restaurants', restaurants_path %>

  <%= button_to "Destroy this restaurant", @restaurant %>
</div>
